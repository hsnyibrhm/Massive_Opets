<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/oren"
    tools:context=".detail_bayar_penitipan">


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnBack"
        android:layout_width="26.97dp"
        android:layout_height="26.97dp"
        android:background="@drawable/back"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.041"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.022" />

    <TextView
        android:id="@+id/tv_detail_perawatan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:fontFamily="@font/poppinsbold"
        android:textColor="@color/black"
        android:text="Detail Perawatan"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_nama_pemilik"
        android:layout_width="140dp"
        android:layout_height="30dp"
        android:layout_marginTop="35dp"
        android:fontFamily="@font/poppins_semibold"
        android:text="Nama Pemilik"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.104"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_detail_perawatan" />

    <EditText
        android:id="@+id/et_nama_pemilik"
        android:layout_width="155dp"
        android:layout_height="40dp"
        android:textAlignment="center"
        android:background="@drawable/btn_detail_perawatan"
        android:gravity="center"
        android:hint="Masukkan Nama"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.117"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_nama_pemilik" />

    <TextView
        android:id="@+id/tv_nama_kucing"
        android:layout_width="140dp"
        android:layout_height="30dp"
        android:layout_marginTop="12dp"
        android:fontFamily="@font/poppins_semibold"
        android:text="Nama Kucing"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.103"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_nama_pemilik" />

    <EditText
        android:id="@+id/et_nama_kucing"
        android:layout_width="155dp"
        android:layout_height="40dp"
        android:layout_marginTop="4dp"
        android:background="@drawable/btn_detail_perawatan"
        android:hint="Nama Kucing"
        android:gravity="center"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.109"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_nama_kucing"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/tv_jenis_kucing"
        android:layout_width="140dp"
        android:layout_height="30dp"
        android:layout_marginTop="12dp"
        android:fontFamily="@font/poppins_semibold"
        android:text="Jenis Kucing"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.407"
        app:layout_constraintStart_toEndOf="@+id/tv_nama_kucing"
        app:layout_constraintTop_toBottomOf="@+id/et_nama_pemilik" />

    <EditText
        android:id="@+id/et__kucing"
        android:layout_width="155dp"
        android:layout_height="40dp"
        android:layout_marginTop="4dp"
        android:gravity="center"
        android:background="@drawable/btn_detail_perawatan"
        android:hint="Jenis Kucing"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.424"
        app:layout_constraintStart_toEndOf="@+id/et_nama_kucing"
        app:layout_constraintTop_toBottomOf="@+id/tv_jenis_kucing" />

    <TextView
        android:id="@+id/tv_berat_kucing"
        android:layout_width="140dp"
        android:layout_height="30dp"
        android:layout_marginTop="15dp"
        android:textColor="@color/black"
        android:fontFamily="@font/poppins_semibold"
        android:text="Berat Kucing"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.104"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_nama_kucing" />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginBottom="20dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@id/tv_durasi_penitipan"
        app:layout_constraintStart_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_brt1"
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:layout_marginStart="28dp"
            android:background="@drawable/btn_detail_perawatan"
            android:text="2Kg" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_brt2"
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:layout_marginStart="28dp"
            android:background="@drawable/btn_detail_perawatan"
            android:text=">2Kg" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_brt3"

            android:layout_width="80dp"
            android:layout_height="30dp"
            android:layout_marginStart="28dp"
            android:background="@drawable/btn_detail_perawatan"
            android:text="â‰¥5Kg" />

    </LinearLayout>

    <TextView
        android:id="@+id/tv_durasi_penitipan"
        android:layout_width="140dp"
        android:layout_height="30dp"
        android:layout_marginTop="48dp"
        android:fontFamily="@font/poppins_semibold"
        android:text="Durasi Penitipan"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.114"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_berat_kucing"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/img_star_date"
        android:layout_width="170dp"
        android:layout_height="30dp"
        android:layout_marginTop="12dp"
        android:src="@drawable/btn_detail_perawatan"
        android:textSize="14sp"
        app:layout_constraintEnd_toStartOf="@+id/img_end_date"
        app:layout_constraintHorizontal_bias="0.875"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_durasi_penitipan"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/ic_kalender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:src="@drawable/icon_kalender"
        app:layout_constraintBottom_toBottomOf="@+id/img_star_date"
        app:layout_constraintEnd_toEndOf="@+id/img_star_date"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/img_star_date"
        app:layout_constraintTop_toTopOf="@+id/img_star_date"
        app:layout_constraintVertical_bias="0.444"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/tv_start_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="12 - Desember - 2023"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@+id/img_star_date"
        app:layout_constraintEnd_toEndOf="@+id/img_star_date"
        app:layout_constraintStart_toEndOf="@+id/ic_kalender"
        app:layout_constraintTop_toTopOf="@+id/img_star_date"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/img_end_date"
        android:layout_width="170dp"
        android:layout_height="30dp"
        android:layout_marginTop="136dp"
        android:src="@drawable/btn_detail_perawatan"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.871"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et__kucing"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/ic_kalender2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:src="@drawable/icon_kalender"
        app:layout_constraintStart_toStartOf="@+id/img_end_date"
        app:layout_constraintTop_toTopOf="@id/img_end_date" />

    <TextView
        android:id="@+id/tv_end_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="4dp"
        android:text="13 - Desember - 2023"
        android:textSize="14sp"
        app:layout_constraintStart_toEndOf="@id/ic_kalender2"
        app:layout_constraintTop_toTopOf="@id/img_end_date" />

    <TextView
        android:id="@+id/tv_tambahan"
        android:layout_width="140dp"
        android:layout_height="30dp"
        android:layout_marginTop="24dp"
        android:fontFamily="@font/poppins_semibold"
        android:text="Tambahan"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.114"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/img_star_date"
        tools:ignore="MissingConstraints" />

    <LinearLayout
        android:id="@+id/LL_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintStart_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_tambahan">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_fitur1"
            android:layout_width="160dp"
            android:layout_height="30dp"
            android:layout_marginStart="28dp"
            android:background="@drawable/btn_detail_perawatan"
            android:text="Grooming Nutrition"
            android:textSize="14sp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_fitur2"
            android:layout_width="160dp"
            android:layout_height="30dp"
            android:layout_marginStart="28dp"
            android:background="@drawable/btn_detail_perawatan"
            android:text="Grooming Kutu"
            android:textSize="14sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/LL_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/LL_1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintStart_toEndOf="parent">
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_fitur3"
            android:layout_width="160dp"
            android:layout_height="30dp"
            android:layout_marginStart="28dp"
            android:background="@drawable/btn_detail_perawatan"
            android:textSize="14sp"
            android:text="Grooming Harian" />
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_fitur4"
            android:layout_width="160dp"
            android:layout_height="30dp"
            android:layout_marginStart="28dp"
            android:background="@drawable/btn_detail_perawatan"
            android:textSize="14sp"
            android:text="Grooming Jamur" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/LL_4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:orientation="horizontal"
        app:layout_constraintStart_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/LL_2">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="28dp"
                android:textColor="@color/black"
                android:fontFamily="@font/poppins_semibold"
                android:text="Total bayar"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:textColor="@color/black"
                android:layout_height="wrap_content"
                android:layout_marginStart="28dp"
                android:fontFamily="@font/poppins_semibold"
                android:text="Rp. 90.000"
                android:textStyle="bold" />
        </LinearLayout>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnbayarpen"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_marginVertical="5dp"
            android:layout_marginStart="170dp"
            android:background="@drawable/btn_detail_perawatan"
            android:text="Bayar"
            android:textAllCaps="false" />
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>